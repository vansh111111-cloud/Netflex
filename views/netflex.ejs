<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Netflex Clone</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-black text-white">

  <!-- Navbar -->
 <nav class="flex justify-between items-center p-4 bg-gray-900 sticky top-0 z-50">
  <h1 class="text-2xl font-bold text-red-600">NETFLEX</h1>
  <ul class="flex gap-6 text-gray-300">
    <li><a href="/user/netflex/home" class="hover:text-red-500">Home</a></li>
    <li><a href="/user/netflex/movies" class="hover:text-red-500">Movies</a></li>
    <li><a href="/user/netflex/search" class="hover:text-red-500">Search</a></li>
    <li><a href="/user/netflex/tvshows" class="hover:text-red-500">TV Shows</a></li>
    <li><a href="/user/netflex/mylist" class="hover:text-red-500">My List</a></li>
    <li><a href="/user/netflex/setting" class="hover:text-red-500">Settings</a></li>

  </ul>
</nav>


  <!-- Hero Section -->
 <section class="relative h-[500px] bg-cover bg-center" style="background-image:url('https://image.tmdb.org/t/p/original/ugS5FVfCI3RV0ZwZtBV3HAV75OX.jpg')">
    <div class="absolute inset-0 bg-black/50 flex flex-col justify-center items-start p-8">
      <h2 class="text-4xl font-bold">Welcome to NETFLEX</h2>
      <p class="mt-2 text-lg">Watch trending movies and shows anytime, anywhere.</p>
      <a href="/user/netflex/movies" class="mt-4 px-4 py-2 bg-red-600 rounded">Watch Now</a>
    </div>
  </section>

  <!-- Movie Section Component -->
  <% function renderSection(title, movies) { %>
    <section class="p-6">
      <h3 class="text-xl font-semibold mb-4"><%= title %></h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 gap-4">
        <% movies.forEach(movie => { %>
          <div class="bg-gray-800 rounded overflow-hidden hover:scale-105 transform transition duration-300">
            <img src="<%= movie %>" class="w-full h-full object-cover" alt="Movie Poster" />
          </div>
        <% }) %>
      </div>
    </section>
  <% } %>

