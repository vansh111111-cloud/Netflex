<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Netflix ‚Äì Security Settings</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white">
  <%- include('partials/navbar') %>

  <section class="max-w-4xl mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6">üîê Security Settings</h1>

    <!-- Password Change -->
    <div class="bg-gray-900 p-6 rounded-lg shadow mb-8">
      <h2 class="text-xl font-semibold mb-4">Change Password</h2>
      <form class="space-y-4">
        <input type="password" placeholder="Current Password" class="w-full p-3 bg-gray-800 rounded border border-gray-700">
        <input type="password" placeholder="New Password" class="w-full p-3 bg-gray-800 rounded border border-gray-700">
        <input type="password" placeholder="Confirm New Password" class="w-full p-3 bg-gray-800 rounded border border-gray-700">
        <button class="bg-red-600 px-6 py-2 rounded font-semibold hover:bg-red-700">Update Password</button>
      </form>
    </div>

    <!-- Two Factor Authentication -->
    <div class="bg-gray-900 p-6 rounded-lg shadow mb-8">
      <h2 class="text-xl font-semibold mb-4">Two-Factor Authentication</h2>
      <p class="text-gray-300 mb-4">Add an extra layer of security to your account.</p>
      <button class="bg-gray-700 px-6 py-2 rounded font-semibold hover:bg-gray-600">Enable 2FA</button>
    </div>

    <!-- Active Devices -->
    <div class="bg-gray-900 p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Active Devices</h2>
      <ul class="space-y-2">
        <li class="flex justify-between items-center bg-gray-800 p-3 rounded">
          <span>Windows PC ‚Äì New Delhi</span>
          <button class="text-red-500 hover:underline">Sign Out</button>
        </li>
        <li class="flex justify-between items-center bg-gray-800 p-3 rounded">
          <span>iPhone 14 ‚Äì Mumbai</span>
          <button class="text-red-500 hover:underline">Sign Out</button>
        </li>
      </ul>
    </div>
  </section>
</body>
</html>
