<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= movie.title %> - Netflex</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
    .nav-link {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0.5rem;
      transition: transform 0.3s ease, filter 0.3s ease;
    }
    .nav-icon {
      font-size: 2.5rem;
      color: #888;
      transition: color 0.3s ease, transform 0.3s ease, filter 0.3s ease;
    }
    .nav-link:hover .nav-icon {
      color: #e50914;
      transform: scale(1.4) rotate(-5deg);
      filter: drop-shadow(0 0 10px #e50914);
    }
    @media (max-width: 768px) {
      .nav-icon { font-size: 2rem; }
      nav { gap: -6px; }
    }
  </style>
</head>
<body class="bg-black text-white min-h-screen">

<%- include('partials/navbar') %>

  <!-- Movie Detail Layout -->
  <div class="p-4 space-y-6">

    <!-- Trailer -->
    <div class="w-full rounded-lg overflow-hidden shadow-lg">
      <video controls autoplay class="w-full h-80 rounded-lg">
        <source src="<%= movie.movieUrl %>" type="video/mp4">
        Your browser does not support video playback.
      </video>
    </div>

    <!-- Title & Info -->
    <div>
      <h1 class="text-3xl font-bold"><%= movie.title %></h1>
      <p class="text-gray-400 text-sm">
        ‚Ä¢ <%= movie.year %> ‚Ä¢ <%= movie.country %> ‚Ä¢ <%= movie.genre.join(', ') %> ‚Ä¢ min: <%= movie.duration %>
      </p>
      <p class="text-gray-400 text-sm">
        Director: <%= movie.director %> ‚Ä¢ Cast: <%= movie.cast.join(', ') %> ‚Ä¢ Tags: <%= movie.tags.join(', ') %> ‚Ä¢ Rating: <%= movie.rating %>
      </p>
      <p class="text-gray-400 text-sm">Audio: <%= movie.audioLanguages ? movie.audioLanguages.join(', ') : 'English' %></p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-4">
      <a href="#" class="flex-1 text-center bg-red-500 text-black font-bold py-2 rounded-lg">‚ñ∂ Watch Now</a>
      <form action="/user/netflex/mylist/<%= movie._id %>" method="POST">
        <button type="submit" class="px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700">+ List</button>
      </form>
      <button class="px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700">üëç Rate</button>
      <button class="px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700">üîó Share</button>
      <button class="px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700">‚¨á Download</button>
    </div>

    <!-- Tabs -->
    <div class="border-t border-gray-700 pt-4">
      <ul class="flex gap-6 text-gray-400 text-sm">
        <li class="text-white border-b-2 border-white pb-1">Details</li>
        <li>Comments</li>
        <li>Trailer</li>
      </ul>
    </div>

    <!-- Description -->
    <div class="text-gray-300">
      <p><%= movie.description %></p>
    </div>

    <!-- Actress Photos -->
    <% if (movie.actressPhotos && movie.actressPhotos.length > 0) { %>
      <div>
        <h2 class="text-xl font-bold mb-2">Actress Photos</h2>
        <div class="flex gap-4 overflow-x-auto pb-2">
          <% movie.actressPhotos.forEach(photo => { %>
            <img src="<%= photo %>" alt="Actress Photo" class="h-32 w-32 object-cover rounded-lg shadow-md">
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- Suggested Movies -->
    <% if (suggestedMovies && suggestedMovies.length > 0) { %>
      <div class="mt-8">
        <h2 class="text-xl font-bold mb-4">Suggested Movies</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <% suggestedMovies.forEach(s => { %>
            <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
              <a href="/user/netflex/movie/<%= s._id %>">
                <img src="<%= s.posterUrl %>" alt="<%= s.title %>" class="w-full h-48 object-cover">
                <div class="p-2">
                  <h3 class="text-sm font-bold truncate"><%= s.title %></h3>
                  <p class="text-xs text-gray-400"><%= s.genre.join(', ') %></p>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

  </div>

</body>
</html>
