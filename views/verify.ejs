<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP - Netflix Clone</title>
  <style>
    /* Netflix-style dark theme */
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background-color: #141414;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: rgba(0,0,0,0.85);
      padding: 40px;
      border-radius: 8px;
      width: 350px;
      text-align: center;
      box-shadow: 0 4px 20px rgba(0,0,0,0.7);
    }

    h2 {
      color: #e50914;
      margin-bottom: 15px;
    }

    p {
      font-size: 14px;
      margin-bottom: 20px;
      color: #ccc;
    }

    label {
      display: block;
      margin-bottom: 8px;
      text-align: left;
    }

    input[type="text"] {
      width: 100%;
      padding: 12px;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      margin-bottom: 20px;
    }

    button {
      background-color: #e50914;
      color: #fff;
      border: none;
      padding: 12px;
      width: 100%;
      font-size: 16px;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover:not(:disabled) {
      background-color: #f6121d;
    }

    button:disabled {
      background-color: #333;
      cursor: not-allowed;
    }

    .timer {
      margin: 15px 0;
      font-size: 14px;
      color: #aaa;
    }

    .resend-link {
      margin-top: 10px;
    }

    .resend-link a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }

    .resend-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Email Verification</h2>
    <p>Weâ€™ve sent a 6-digit OTP to your email. Please enter it below to complete registration.</p>

    <form action="/user/verify-otp" method="POST">
      <!-- Keep email hidden so we know which user -->
      <input type="hidden" name="email" value="<%= email %>">

      <label for="otp">Enter OTP</label>
      <input type="text" id="otp" name="otp" required minlength="6" maxlength="6" placeholder="6-digit code">

      <button type="submit">Verify</button>
    </form>

    <div class="timer">
      OTP will expire in <span id="countdown">05:00</span>
    </div>

    <div class="resend-link">
      <button id="resendBtn" disabled>
        <a href="/resend-otp?email=<%= email %>" id="resendLink">Resend OTP</a>
      </button>
    </div>
  </div>

  <script>
    // Countdown logic
    let timeLeft = 5 * 60; // 5 minutes in seconds
    const countdownEl = document.getElementById("countdown");
    const resendBtn = document.getElementById("resendBtn");
    const resendLink = document.getElementById("resendLink");

    const timer = setInterval(() => {
      let minutes = Math.floor(timeLeft / 60);
      let seconds = timeLeft % 60;
      countdownEl.textContent =
        `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

      if (timeLeft <= 0) {
        clearInterval(timer);
        countdownEl.textContent = "00:00";
        resendBtn.disabled = false; // Enable resend button
      }

      timeLeft--;
    }, 1000);

    // Prevent click on resend until timer expires
    resendBtn.addEventListener("click", (e) => {
      if (resendBtn.disabled) {
        e.preventDefault();
      }
    });
  </script>
</body>
</html>
