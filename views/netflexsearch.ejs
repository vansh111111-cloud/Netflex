<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NETFLEX - Search</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white">

  <!-- Navbar -->
  <nav class="flex justify-between items-center p-4 bg-gray-900 sticky top-0 z-50">
    <h1 class="text-2xl font-bold text-red-600">NETFLEX</h1>
    <ul class="flex gap-6 text-gray-300">
      <li><a href="/user/netflex/home" class="hover:text-red-500">Home</a></li>
      <li><a href="/user/netflex/movies" class="hover:text-red-500">Movies</a></li>
            <li><a href="/user/netflex/search" class="hover:text-red-500">Search</a></li>

      <li><a href="/user/netflex/tvshows" class="hover:text-red-500">TV Shows</a></li>
      <li><a href="/user/netflex/mylist" class="hover:text-red-500">My List</a></li>
      <li><a href="/user/netflex/setting" class="hover:text-red-500">Settings</a></li>
    </ul>
  </nav>

  <!-- Search Section -->
  <section class="p-6 max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">Search</h2>

    <!-- Search Bar -->
    <div class="flex items-center bg-gray-800 rounded-lg overflow-hidden shadow-md mb-8">
      <input type="text" placeholder="Search for movies, TV shows..." class="w-full p-3 bg-gray-800 text-white focus:outline-none">
      <button class="bg-red-600 px-5 py-3 font-semibold">Search</button>
    </div>

    <!-- Example Search Results -->
    <div>
      <h3 class="text-xl font-semibold mb-4">Top Results</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        
        <!-- Movie Card -->
        <div class="bg-gray-900 rounded-lg shadow hover:scale-105 transform transition duration-300">
          <img src="https://via.placeholder.com/200x300" alt="Movie Poster" class="rounded-t-lg w-full h-48 object-cover">
          <div class="p-3">
            <h4 class="font-bold text-lg">Movie Title</h4>
            <p class="text-sm text-gray-400">Action • 2025</p>
          </div>
        </div>

        <!-- Another Movie -->
        <div class="bg-gray-900 rounded-lg shadow hover:scale-105 transform transition duration-300">
          <img src="https://via.placeholder.com/200x300" alt="Movie Poster" class="rounded-t-lg w-full h-48 object-cover">
          <div class="p-3">
            <h4 class="font-bold text-lg">Another Movie</h4>
            <p class="text-sm text-gray-400">Drama • 2024</p>
          </div>
        </div>

        <!-- More results... -->
        <div class="bg-gray-900 rounded-lg shadow hover:scale-105 transform transition duration-300">
          <img src="https://via.placeholder.com/200x300" alt="Movie Poster" class="rounded-t-lg w-full h-48 object-cover">
          <div class="p-3">
            <h4 class="font-bold text-lg">Series Title</h4>
            <p class="text-sm text-gray-400">TV Show • 3 Seasons</p>
          </div>
        </div>

      </div>
    </div>
  </section>

</body>
</html>
