<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Netflex Clone</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white">

  <!-- Navbar -->
  <nav class="flex justify-between items-center p-4 bg-gray-900 sticky top-0 z-50 shadow-md">
    <h1 class="text-2xl font-bold text-red-600">NETFLEX</h1>
    <ul class="flex gap-6 text-gray-300 font-medium">
      <li><a href="/user/netflex/home" class="hover:text-red-500">Home</a></li>
      <li><a href="/user/netflex/movies" class="hover:text-red-500">Movies</a></li>
      <li><a href="/user/netflex/search" class="hover:text-red-500">Search</a></li>
      <li><a href="/user/netflex/tvshows" class="hover:text-red-500">TV Shows</a></li>
      <li><a href="/user/netflex/mylist" class="hover:text-red-500">My List</a></li>
      <li><a href="/user/netflex/setting" class="hover:text-red-500">Settings</a></li>
      <% if (role === 'creator' || role === 'admin') { %>
        <li><a href="/user/netflex/upload" class="hover:text-red-500">Upload</a></li>
      <% } %>
    </ul>
  </nav>

  <!-- Hero Section -->
  <section class="relative h-[400px] bg-cover bg-center" style="background-image:url('/uploads/trailers/default-hero.jpg')">
    <div class="absolute inset-0 bg-black/60 flex flex-col justify-center items-start p-8">
      <h2 class="text-4xl font-bold">Welcome to NETFLEX</h2>
      <p class="mt-2 text-lg text-gray-200">Watch trending movies and shows anytime, anywhere.</p>
    </div>
  </section>

  <!-- Movies Section -->
  <section class="p-8 max-w-7xl mx-auto">
    <h3 class="text-xl font-semibold mb-6">ðŸŽ¬ Latest Uploads</h3>

    <% if (movies.length > 0) { %>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 gap-6">
        <% movies.forEach(movie => { %>
          <a href="/user/netflex/movie/<%= movie._id %>" 
             class="group relative rounded-lg overflow-hidden bg-gray-800 hover:scale-105 transform transition duration-300">
            
            <!-- Poster -->
            <% if (movie.posterUrl) { %>
              <img src="<%= movie.posterUrl %>" 
                   alt="<%= movie.title %>" 
                   class="w-full h-72 object-cover" />
            <% } else { %>
              <div class="w-full h-72 flex items-center justify-center bg-gray-700 text-gray-400">
                No Poster
              </div>
            <% } %>

            <!-- Overlay Title -->
            <div class="absolute inset-0 bg-black/70 opacity-0 group-hover:opacity-100 flex items-center justify-center text-center transition">
              <h3 class="text-lg font-bold px-2"><%= movie.title %></h3>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-400">No movies uploaded yet.</p>
    <% } %>
  </section>

</body>
</html>
